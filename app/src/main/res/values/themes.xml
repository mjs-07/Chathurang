<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.Chathurang" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your light theme here -->
    </style>

    <!-- App theme (used after SplashActivity starts) -->
    <style name="Theme.Chathurang" parent="Base.Theme.Chathurang">
        <!-- Ensure no windowBackground drawable that shows the logo -->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Lightweight theme used ONLY while SplashActivity is starting -->
    <style name="Theme.Chathurang.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- plain background while activity initializes -->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.Chathurang.Dialog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- plain background while activity initializes -->
        <item name="android:windowBackground">#00000000</item>
    </style>

</resources>
