<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mode_root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#232323">

        <!-- TITLE -->
        <TextView
            android:text="Game Setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/chess_premium"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingBottom="12dp"/>

        <!-- MODE SECTION -->
        <TextView
            android:text="Choose Mode"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Two Player -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_two_player"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_glass_card"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/two_player_box"/>

                    <TextView
                        android:id="@+id/tv_two_player"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="Pass n Play"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- VS AI -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_vs_ai"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_glass_card"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ai_box"/>

                    <TextView
                        android:id="@+id/tv_vs_ai"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="Play vs AI"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- TIME SECTION -->
        <TextView
            android:text="Choose Time"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <include layout="@layout/item_time_card" android:id="@+id/card_1min"
                android:layout_height="50dp"
                android:layout_width="127dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>
            <include layout="@layout/item_time_card" android:id="@+id/card_3min"
                android:layout_height="50dp"
                android:layout_width="127dp"/>
            <include layout="@layout/item_time_card" android:id="@+id/card_5min"
                android:layout_height="50dp"
                android:layout_width="127dp"/>
            <include layout="@layout/item_time_card" android:id="@+id/card_10min"
                android:layout_height="50dp"
                android:layout_width="127dp"/>
        </GridLayout>

        <include layout="@layout/item_time_card"
            android:id="@+id/card_no_timer"
            android:layout_marginTop="8dp"
            android:layout_height="50dp"
            android:layout_width="match_parent"/>

        <!-- PLAY BUTTON -->
        <Button
            android:id="@+id/btn_play_game"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="PLAY"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_play_gradient"/>

        <Button
            android:id="@+id/btn_cancel_mode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Cancel"
            android:background="@drawable/btn_play_gradient"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>