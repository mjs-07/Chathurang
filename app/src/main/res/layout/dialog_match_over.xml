<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CC000000">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        android:background="@drawable/bg_premium_card">

        <ImageView
            android:id="@+id/imgTrophy"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/trophy"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvResult"
            android:layout_marginTop="12dp"
            android:text="VICTORY"
            android:textSize="28sp"
            android:textColor="#FFD700"
            android:layout_gravity="center"
            android:fontFamily="@font/chess_premium"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvback"
            android:gravity="center"
            android:padding="10dp"
            android:background="#53AE22"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvTurn"
                android:text="White captured the King !!"
                android:textColor="@android:color/white"
                android:fontFamily="@font/chess_premium"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvQuote"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:text="A brilliant conquest!"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnNewMatch"
                android:background="@drawable/btn_play_gradient"
                android:text="NEW MATCH"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="250dp"
                android:id="@+id/btnHome"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_play_gradient"
                android:text="HOME"/>
        </LinearLayout>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/confetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/confetti"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"/>
</FrameLayout>
