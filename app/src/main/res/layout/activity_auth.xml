<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lottie="http://schemas.android.com/apk/res-auto">

    <!-- ðŸ”¥ Background Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/authBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:clickable="false"
        android:focusable="false"
        lottie:lottie_rawRes="@raw/auth_activity"
        lottie:lottie_autoPlay="true"
        lottie:lottie_loop="true" />

    <!-- Optional subtle overlay for readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>

    <!-- Center Glass Card -->
    <LinearLayout
        android:id="@+id/authCard"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@drawable/bg_glass_card"
        android:elevation="12dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:alpha="0">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/logo">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleText"
                    android:text="CHATHURANG"
                    android:textColor="@color/gold"
                    android:textSize="34sp"
                    android:fontFamily="@font/chathurang_font"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Where strategy meets chance"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btnGoogleLogin"
            android:text="Enter the Arena"
            android:layout_width="match_parent"
            android:background="@drawable/btn_primary"
            android:textColor="#FFFFFF"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/etUsername"
            android:hint="Choose your name"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#FFFFFF"
            android:visibility="gone"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvUsernameError"
            android:textColor="#FF4444"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSaveUsername"
            android:text="Continue"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:background="@drawable/btn_primary"
            android:layout_height="50dp"/>
    </LinearLayout>

</FrameLayout>